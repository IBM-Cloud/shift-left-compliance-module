{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "api-key": {
            "description": {
                "$ref": "#/messages/deploy.apikeyDescription"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "api-key"
            }
        },
        "art-api-key": {
            "description": {
                "$ref": "#/messages/deploy.apikeyDescription"
            },
            "type": "string"
        },
        "gitlab-token": {
            "description": {
                "$ref": "#/messages/deploy.apikeyDescription"
            },
            "type": "string"
        },
        "git-template-branch": {
            "description": {
                "$ref": "#/messages/deploy.apikeyDescription"
            },
            "type": "string"
        },
        "slack-webhook": {
            "description": {
                "$ref": "#/messages/verify.devxSlackWebhookURLDescription"
            },
            "type": "string"
        },
        "owner-slack-channel-webhook": {
            "description": {
                "$ref": "#/messages/verify.ownersSlackWebhookURLDescription"
            },
            "type": "string"
        },
        "pagerduty-api-token": {
            "description": {
                "$ref": "#/messages/verify.pagerDutyAPITokenDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "pagerduty-service-name": {
            "description": {
                "$ref": "#/messages/verify.pagerDutyServiceNameDescription"
            },
            "type": "string",
            "pattern": "\\S"
        }
    },
    "required": [
        "api-key",
        "art-api-key",
        "gitlab-token",
        "git-template-branch"
                ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/validator/validator-v1.html"
        },
        {
            "type": "password",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.apikey"
            },
            "key": "api-key"
        },
        {
            "type": "label",
            "title": {
                "$ref": "#/messages/verify.slackIntegrationDescription"
            }
        },
        {
            "type": "password",
            "readonly": false,
            "title": {
                "$ref": "#/messages/verify.devxSlackWebhookURLTitle"
            },
            "key": "devx-slack-channel-webhook"
        },
        {
            "type": "password",
            "readonly": false,
            "title": {
                "$ref": "#/messages/verify.ownersSlackWebhookURLTitle"
            },
            "key": "owner-slack-channel-webhook"
        },
        {
            "type": "label",
            "title": {
                "$ref": "#/messages/verify.pagerDutyIntegrationDescription"
            }
        },
        {
            "type": "password",
            "readonly": false,
            "title": {
                "$ref": "#/messages/verify.pagerDutyAPITokenTitle"
            },
            "key": "pagerduty-api-token"
        },
        {
            "type": "password",
            "readonly": false,
            "title": {
                "$ref": "#/messages/verify.pagerDutyServiceNameTitle"
            },
            "key": "pagerduty-service-name"
        }
    ]
}